<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.selema.newproject"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="27" />

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.front" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name="com.selema.newproject.MyApplication"
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/AppTheme" >
        <activity android:name="com.selema.newproject.LoginActivity" />
        <activity android:name="com.selema.newproject.Messages.Chat" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.selema.newproject.RegisterActivity" />
        <activity android:name="com.selema.newproject.QR.GenQr" />
        <activity android:name="com.selema.newproject.QR.DecoderActivity" />
        <activity android:name="com.selema.newproject.SearchResult" />
        <activity android:name="com.selema.newproject.Messages.MyMessages" />
        <activity android:name="com.selema.newproject.MainActivity" />
    </application>

</manifest>